#!/bin/sh

usage() {
	cat <<EOF
Usage:
  /Applications/mampstack-8.1.9-0/mariadb/bin/jemalloc-config <option>
Options:
  --help | -h  : Print usage.
  --version    : Print jemalloc version.
  --revision   : Print shared library revision number.
  --config     : Print configure options used to build jemalloc.
  --prefix     : Print installation directory prefix.
  --bindir     : Print binary installation directory.
  --datadir    : Print data installation directory.
  --includedir : Print include installation directory.
  --libdir     : Print library installation directory.
  --mandir     : Print manual page installation directory.
  --cc         : Print compiler used to build jemalloc.
  --cflags     : Print compiler flags used to build jemalloc.
  --cppflags   : Print preprocessor flags used to build jemalloc.
  --ldflags    : Print library flags used to build jemalloc.
  --libs       : Print libraries jemalloc was linked against.
EOF
}

prefix="/Applications/mampstack-8.1.9-0/mariadb"
exec_prefix="/Applications/mampstack-8.1.9-0/mariadb"

case "$1" in
--help | -h)
	usage
	exit 0
	;;
--version)
	echo "4.2.1-0-g0"
	;;
--revision)
	echo "2"
	;;
--config)
	echo "--prefix=/Applications/mampstack-8.1.9-0/mariadb --with-version=4.2.1-0-g0 CC=gcc 'CFLAGS=-I/bitnami/mamp81stack-osx-x64/output/common/include -I/bitnami/mamp81stack-osx-x64/output/common/include/ncurses -I/bitnami/mamp81stack-osx-x64/output/common/include -arch x86_64' 'LDFLAGS=-L/bitnami/mamp81stack-osx-x64/output/sqlite/lib -L/bitnami/mamp81stack-osx-x64/output/common/lib -arch x86_64' 'CPPFLAGS=-DAI_ADDRCONFIG=0 -I/bitnami/mamp81stack-osx-x64/output/sqlite/include -I/bitnami/mamp81stack-osx-x64/output/common/include -I/bitnami/mamp81stack-osx-x64/output/common/include/ncurses -I/bitnami/mamp81stack-osx-x64/output/common/include/sasl -I/bitnami/mamp81stack-osx-x64/output/common/include -arch x86_64'"
	;;
--prefix)
	echo "/Applications/mampstack-8.1.9-0/mariadb"
	;;
--bindir)
	echo "/Applications/mampstack-8.1.9-0/mariadb/bin"
	;;
--datadir)
	echo "/Applications/mampstack-8.1.9-0/mariadb/share"
	;;
--includedir)
	echo "/Applications/mampstack-8.1.9-0/mariadb/include"
	;;
--libdir)
	echo "/Applications/mampstack-8.1.9-0/mariadb/lib"
	;;
--mandir)
	echo "/Applications/mampstack-8.1.9-0/mariadb/share/man"
	;;
--cc)
	echo "gcc"
	;;
--cflags)
	echo "-I/bitnami/mamp81stack-osx-x64/output/common/include -I/bitnami/mamp81stack-osx-x64/output/common/include/ncurses -I/bitnami/mamp81stack-osx-x64/output/common/include -arch x86_64"
	;;
--cppflags)
	echo "-DAI_ADDRCONFIG=0 -I/bitnami/mamp81stack-osx-x64/output/sqlite/include -I/bitnami/mamp81stack-osx-x64/output/common/include -I/bitnami/mamp81stack-osx-x64/output/common/include/ncurses -I/bitnami/mamp81stack-osx-x64/output/common/include/sasl -I/bitnami/mamp81stack-osx-x64/output/common/include -arch x86_64 -D_REENTRANT"
	;;
--ldflags)
	echo "-L/bitnami/mamp81stack-osx-x64/output/sqlite/lib -L/bitnami/mamp81stack-osx-x64/output/common/lib -arch x86_64 "
	;;
--libs)
	echo " -lpthread"
	;;
*)
	usage
	exit 1
esac
